<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="440" style="-fx-background-color: #F5F7FA;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22.0.2" fx:controller="controllers.DemanderCongeController">
    <stylesheets>
        <URL value="@../css/main_styles.css" />
    </stylesheets>
    <VBox alignment="TOP_CENTER" layoutX="45.0" layoutY="61.0" prefWidth="350.0" spacing="15">
        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #1A3C5A;" text="Demandes en cours" />
        <ScrollPane prefHeight="400" prefWidth="350">
            <VBox fx:id="cardContainer" spacing="10" />
        </ScrollPane>
        <HBox fx:id="buttonContainer" alignment="CENTER" spacing="10">
            <Button fx:id="ajouterCongeButton" onAction="#ajouterConge" styleClass="button green" text="Ajouter" minWidth="80" minHeight="30" />
            <Button fx:id="modifierCongeButton" onAction="#modifierConge" styleClass="button" text="Modifier" minWidth="80" minHeight="30" />
            <Button fx:id="annulerCongeButton" onAction="#annulerConge" styleClass="button" text="Annuler" minWidth="80" minHeight="30" />
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </HBox>
    </VBox>
</AnchorPane>